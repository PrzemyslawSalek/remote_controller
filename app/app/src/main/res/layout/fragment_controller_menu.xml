<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ControllerMenu">

    <Button
        android:id="@+id/button_editMode"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:text="@string/action_editMode"
        app:layout_constraintBottom_toTopOf="@+id/button_usageMode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_usageMode"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="@string/action_usageMode"
        app:layout_constraintBottom_toTopOf="@+id/button_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_editMode" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginBottom="120dp"
        android:text="@string/action_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_usageMode" />
</androidx.constraintlayout.widget.ConstraintLayout>