<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/general_layout"
            layout="@layout/options_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_Slider_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/colon_range"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_Slider2" />

        <LinearLayout
            android:id="@+id/linearLayout_Slider3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_Slider_range">

            <TextView
                android:id="@+id/textView_Slider_rangeMIN"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/colon_min"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextNumber_Slider_rangeMIN"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/textView_Slider_rangeMAX"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/colon_max"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextNumber_Slider_rangeMAX"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:importantForAutofill="no"
                android:inputType="number"
                tools:ignore="LabelFor" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>

